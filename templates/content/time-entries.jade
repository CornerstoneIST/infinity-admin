#pad-wrapper.users-list
  .row-fluid.header
    h3 Search
    .span10.pull-right
      input.span5.search(type='text', title='Type a user\'s name...')
      //
         custom popup filter
      //
         styles are located in css/elements.css
      //
         script that enables this dropdown is located in js/theme.js
      .ui-dropdown
        .head(data-toggle='tooltip', title='Click me!')
          | Filter Results
          i.arrow-down
        .dialog
          .pointer
            .arrow
            .arrow_border
          .body
            p.title
              | Show logs where:
            .form
              select
                option Client
                option User
                option Ticket
                option Task
                option Hours
              select
                option is equal to
                option is not equal to
                option is greater than
                option starts with
                option contains
              input(type='text')
              a.btn-flat.small Add filter
  .table-wrapper.orders-table
    .row-fluid
      .span4
        .field-box
          label Start Date:
          input.input-large.startDate(type='text', value='03/29/2013')
      .span4
        .field-box
          label End Date:
          input.input-large.endDate(type='text', value='04/29/2013')
      .span3
        label Status:
        .btn-group
          button.glow.left.large In Progress
          button.glow.middle.large Completed
          button.glow.right.large.active All

      #table.row-fluid
    #pagination