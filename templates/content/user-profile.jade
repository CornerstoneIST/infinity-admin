      img.avatar.img-circle(src='/img/contact-profile.png')
      h3.name <%= name %>
      span.area Graphic Designer
    a.btn-flat.icon.pull-right.delete-user(data-toggle='tooltip', title='Delete user', data-placement='top')
      i.icon-trash
    a.btn-flat.icon.large.pull-right.edit
      | Edit this person
